@page "/temp"

<h3>Temp Converter</h3>

<div class="row g-2">
	<div class="col-sm-6">
		<label>Celsius</label>
		<input type="number" class="form-control" @bind="c" @bind:after="CChanged" />
	</div>
	<div class="col-sm-6">
		<label>Fahrenheit</label>
		<input type="number" class="form-control" @bind="f" @bind:after="FChanged" />
	</div>
</div>

@code {
	private double c;
	private double f;

	private void CChanged() => f = Math.Round(c * 9.0 / 5.0 + 32, 2);
	private void FChanged() => c = Math.Round((f - 32) * 5.0 / 9.0, 2);
}