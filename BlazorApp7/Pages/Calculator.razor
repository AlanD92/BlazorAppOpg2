@page "/calculator"

<h3>Calculator</h3>

<div class="calculator">
	<div class="field">
		<label>Tal 1:</label>
		<input type="number" @bind="tal1" class="form-control" />
	</div>

	<div class="field">
		<label>Tal 2:</label>
		<input type="number" @bind="tal2" class="form-control" />
	</div>

	<div class="buttons">
		<button class="btn btn-primary" @onclick="Add">+</button>
		<button class="btn btn-primary" @onclick="Subtract">-</button>
		<button class="btn btn-primary" @onclick="Multiply">*</button>
		<button class="btn btn-primary" @onclick="Divide">/</button>
		<button class="btn btn-primary" @onclick="Factorial">!</button>
	</div>
</div>



@if (!string.IsNullOrWhiteSpace(fejl))
{
	<div class="alert alert-warning mt-3">@fejl</div>
}
@if (resultatText is not null)
{
	<p class="mt-3"><strong>Resultat:</strong> @resultatText</p>
}